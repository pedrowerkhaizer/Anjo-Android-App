<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LostConnection">

    <ImageView
        android:id="@+id/img_slide"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_sentiment_dissatisfied_150dp" />

    <TextView
        android:id="@+id/textViewHeadConnection"
        style="@style/H1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="264dp"
        android:padding="18dp"
        android:text="Parece que você está com problemas com a internet"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textViewBodyConnection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="334dp"
        android:padding="18dp"
        style="@style/H2MS"
        android:textColor="@color/materialGray800"
        android:textStyle="normal"
        android:text="Tente novamente em instantes!"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/tryAgainBtn"
        android:layout_width="196dp"
        android:layout_height="54dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="430dp"
        android:text="Tentar novamente"
        style="@style/primaryButton"/>

</RelativeLayout>