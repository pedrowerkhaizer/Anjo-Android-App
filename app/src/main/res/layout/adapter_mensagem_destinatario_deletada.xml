<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/bg_balao_chat"
        android:backgroundTint="@color/materialGray100"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_close_white_24dp"
            android:tint="@color/materialGray900"/>

        <TextView
            android:id="@+id/lblMensagemTexto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textStyle="italic"
            android:layout_marginBottom="4dp"
            android:maxWidth="220dp"
            android:textColor="@color/materialGray700" />

        <TextView
            android:id="@+id/lblHorarioMensagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/materialGray600"
            android:layout_gravity="bottom|end"
            android:layout_marginStart="8dp"/>
        <TextView
            android:id="@+id/lblDataMensagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:visibility="gone"/>

    </LinearLayout>
</RelativeLayout>