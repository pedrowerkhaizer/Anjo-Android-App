<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="100" android:exitFadeDuration="220">

    <item android:drawable="@color/gray_15_transparent" android:state_window_focused="false" />

    <!-- Even though these two point to the same resource, have two states so the drawable will invalidate itself when coming out of pressed state. -->
    <item android:drawable="@color/gray_5_transparent" android:state_enabled="false" android:state_focused="true" android:state_pressed="true" />
    <item android:drawable="@color/gray_5_transparent" android:state_enabled="false" android:state_focused="true" />
    <item android:drawable="@color/gray_5_transparent" android:state_focused="true" android:state_pressed="true" />
    <item android:drawable="@color/gray_9_transparent" android:state_focused="false" android:state_pressed="true" />
    <item android:drawable="@color/gray_15_transparent" android:state_focused="true" />
    <item android:drawable="@color/gray_15_transparent" android:state_focused="true"  android:state_hovered="true" android:state_checkable="true" android:state_enabled="true"/>
    <item android:drawable="@color/gray_15_transparent" />

</selector>